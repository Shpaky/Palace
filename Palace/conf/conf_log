log4perl.logger.Log=INFO, A1
log4perl.appender.A1=Log::Dispatch::File
log4perl.appender.A1.filename=Palace/logs/common_log
log4perl.appender.A1.mode=append
log4perl.appender.A1.layout=Log::Log4perl::Layout::PatternLayout
log4perl.appender.A1.layout.ConversionPattern=%d %p> %F{1}:%L %M - %m%n

log4perl.logger.Not=WARN, A2
log4perl.appender.A2=Log::Dispatch::Email::Sendmail
log4perl.appender.A2.to=vvow.fox@yandex.ru vladimirsolenkov@yandex.ru
